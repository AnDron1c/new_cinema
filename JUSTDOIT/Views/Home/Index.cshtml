@model viacinema.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

@using viacinema.Models
@{
    string GetClassName(int rating)
    {
        switch (rating)
        {
            case 1: return "one";
            case 2: return "two";
            case 3: return "three";
            case 4: return  "four";
            case 5:
            default: return "five";
        }
    }

}
<div class="home">
    <h1>Movies</h1>
    <ul>
        @{
            foreach (Movie movie in @Model.Movies)
            {
                <li class="movie-container">
                    <h3 class="movie-title">@movie.Title</h3>
                    <div class="movie-content">
                        <img class="movie-image" src="@movie.ImageUrl" />
                        <div class="movie-info">
                            <p class="movie-description"><b>Description:</b> @movie.Description</p>
                            <p class="movie-genre"><b>Genre:</b> @movie.Genre</p>
                            <p class="movie-rating @GetClassName(movie.Rating)"><b>Rating:</b> <span></span></p>
                            <a class="more-info-button" href="/MoreInfo/@movie.Id">Specifics</a>
                        </div>
                    </div>
                </li>
            }
        }
    </ul>
</div>

<style>
    ul {
        margin: unset;
        padding: unset;
    }

    li {
        margin: unset;
        list-style-type: none;
    }

    .movie-image {
        width: 350px;
        height: 250px;
        margin: 0px 20px 20px 0;
    }

    .movie-content {
        display: flex;
    }

        .movie-content .movie-image {
            flex: 2;
        }

        .movie-content .movie-info {
            flex: 4;
        }

    .movie-rating {
        margin-bottom: 20px;
    }

    .more-info-button {
        -webkit-appearance: unset;
        outline: unset;
        color: #fff;
        background: #66b0f5;
        border: unset;
        padding: 10px 60px;
        margin-top: 20px;
        font-size: 17px;
        border-radius: 3px;
    }

    .more-info-button:hover {
        opacity: .7;
        color: #fff;
        text-decoration: unset;
    }

    .movie-rating {
        display: flex;
        align-items: center;
    }

    .movie-rating span {
        display: inline-flex;
        width: 100px;
        height: 40px;
        background: url("https://www.gruppomazzini.it/site/uploads/2017/06/five-stars.png");
        background-size: cover;
    }

    .movie-rating.four {
        width: 130px;
    }

    .movie-rating.three {
        width: 111px;
    }

    .movie-rating.two {
        width: 91px;
    }

    .movie-rating.one {
        width: 73px;
    }
</style>